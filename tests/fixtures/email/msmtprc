# Test MSMTP configuration for handleylab@gmail.com
# Based on user's existing Gmail configuration

defaults
auth           on
tls            on
logfile        /tmp/msmtp-test.log
protocol       smtp

account        HandleyLab
host           smtp.gmail.com
port           587
from           handleylab@gmail.com
user           handleylab@gmail.com
tls_trust_file /etc/ssl/certs/ca-certificates.crt
# For testing, use environment variable authentication
passwordeval "echo $GMAIL_TEST_PASSWORD"

account default : HandleyLab